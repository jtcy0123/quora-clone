<h2>QUESTIONS YOU ASKED</h2>

<!-- <h1>ASK ANY QUESTION</h1> -->
<p id="error" style="color: #f00"></p>
<form id='ask_question' action="/questions" method="post">
  <input style="background-color: #dcdcdc" class="btn-block" type="text" name="question[subject]" placeholder="What is your question?" required>
  <textarea style="background-color: #f5f5f5" class="btn-block" name='question[description]' form='ask_question' rows="5" placeholder="Type your description here" required></textarea>
  <input type="submit" value="Ask">
</form>

<% if @questions.length == 0 %>
  <p id="noQmsg" style="text-align: center">You have no question yet.</p>
<% else %>
  <% @questions.each do |q| %>
    <div class="panel panel-default">
      <div class="panel-heading"><b><%= q.subject %></b>&ensp;<a href="/questions/<%= q.id %>/edit"><i class="w3-small fa fa-pencil-square-o" aria-hidden="true"></i></a>&ensp;<a href="/questions/<%= q.id %>/answers"><span class="badge">see all answers</span></a><div style="text-align: right; font-size: 10px">created on&nbsp;<%= q.created_at.strftime('%Y-%m-%d') %></div></div>
      <div class="panel-body"><%= q.description %></div>
      <table><tr><td>
       <form style="margin-bottom: -3px" action='/questions/<%= q.id %>' method='post'>
       <input id='hidden' type="hidden" name="_method" value="delete">
      <button type="submit" id="deleteBtn" class="btn btn-danger"><i class="fa fa-trash"></i></button></form></td><td>
      <a href="/questions/<%= q.id %>/answers/new"><button id="ansBtn" class="btn btn-default"><i class="fa fa-pencil">Answer</i></button></a></td></tr></table>
    </div>
  <% end %>
<% end %>

